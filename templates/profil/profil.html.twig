{% extends 'base.html.twig' %}

{% block title %}TheBlog - Profil{% endblock %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
{% endblock %}

{% block js %}
    {{ parent() }}
{% endblock %}

{% form_theme updateForm 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div class="container-fluid profil">
        <div class="card-group">
            <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
                <div class="card-header">Informations Personnelles</div>
                <div class="card-body">
                    <h5 class="card-title">Modifications</h5>
                    <p class="card-text">
                        {{ form_start(updateForm) }}
                        {{ form_row(updateForm.login) }}
                        {{ form_row(updateForm.password, {
                            label: 'Password'
                        }) }}

                        <button type="submit" class="btn btn-dark">update</button>
                        {{ form_end(updateForm) }}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
